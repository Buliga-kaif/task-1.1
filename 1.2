#include <stdio.h>
#include <math.h> // Для использования функции pow
#include <locale.h> // Для setlocale

/**
 * @brief Главная функция программы.
 *
 * Данная программа позволяет пользователю вводить длину ребра куба и рассчитывает:
 * 1. Площадь грани куба.
 * 2. Площадь полной поверхности куба.
 * 3. Объем куба.
 *
 * Программа работает в бесконечном цикле до тех пор, пока её не завершат.
 *
 * @return 0, если программа завершилась успешно.
 */
int main(void) {
    // Установка локали для корректного отображения символов на русском языке
    setlocale(LC_ALL, "rus");

    while (1) {
        double a; // Длина ребра куба

        // Ввод длины ребра куба
        printf("Введите длину ребра куба a = ");
        if (scanf("%lf", &a) != 1) {
            // Ввод недействительный, очистка буфера и повтор
            printf("Ошибка: неверный ввод. Пожалуйста, введите число.\n");
            while (getchar() != '\n'); // Очищаем буфер ввода
            continue; // Возвращаемся к началу цикла для нового ввода
        }

        // Проверка введенного значения
        if (a <= 0) {
            printf("Ошибка: длина ребра должна быть положительным числом.\n");
            continue; // Возвращаемся к началу цикла для нового ввода
        }

        // Вычисление и вывод результатов
        double facet_area = pow(a, 2); // Площадь грани
        printf("\nПлощадь грани = %.2f квадратных единиц\n", facet_area);
        printf("Площадь полной поверхности = %.2f квадратных единиц\n", 6 * facet_area);
        printf("Объем куба = %.2f кубических единиц\n\n", facet_area * a);
    }

    return 0; // Программа завершилась успешно
}

#include <stdio.h>

/**
 * @brief Функция для вычисления силы тяжести.
 *
 * Данная функция принимает массу в килограммах и гравитационную постоянную,
 * и возвращает силу тяжести в ньютонах.
 *
 * @param mass Масса объекта в килограммах (кг).
 * @param gravity_constant Гравитационная постоянная в м/с².
 * @return Сила тяжести в ньютонах (Н).
 */
double calculate_gravity(double mass, double gravity_constant) {
    return mass * gravity_constant; // Используем константу
}

/**
 * @brief Функция для ввода массы от пользователя.
 *
 * Эта функция запрашивает массу у пользователя и возвращает её.
 *
 * @return Масса в килограммах (кг).
 */
double input_mass() {
    double mass; // Переменная для хранения массы
    printf("Введите массу объекта (в кг): ");
    while (scanf("%lf", &mass) != 1 || mass < 0) { // Проверяем ввод на корректность
        printf("Ошибка ввода. Пожалуйста, введите положительное число: ");
        while (getchar() != '\n'); // Очищаем буфер ввода
    }
    return mass; // Возвращаем введенное значение
}

/**
 * @brief Функция для ввода гравитационной постоянной от пользователя.
 *
 * Эта функция запрашивает значение гравитационной постоянной и возвращает его.
 *
 * @return Гравитационная постоянная в м/с².
 */
double input_gravity_constant() {
    double gravity_constant; // Переменная для хранения гравитационной постоянной
    printf("Введите гравитационную постоянную (в м/с²): ");
    while (scanf("%lf", &gravity_constant) != 1 || gravity_constant <= 0) { // Проверяем ввод на корректность
        printf("Ошибка ввода. Пожалуйста, введите положительное число: ");
        while (getchar() != '\n'); // Очищаем буфер ввода
    }
    return gravity_constant; // Возвращаем введенное значение
}

/**
 * @brief Главная функция программы.
 *
 * Данная программа вычисляет силу тяжести для заданной массы и гравитационной постоянной,
 * введенных пользователем.
 *
 * @return 0, если программа завершилась успешно.
 */
int main(void) {
    double mass; // Масса объекта в килограммах (кг)
    double gravity_constant; // Гравитационная постоянная в м/с²
    double force_of_gravity; // Сила тяжести в ньютонах (Н)
    
    // Ввод данных от пользователя
    mass = input_mass(); // Вызываем функцию для ввода массы
    gravity_constant = input_gravity_constant(); // Вызываем функцию для ввода гравитационной постоянной
    
    // Вычисление силы тяжести
    force_of_gravity = calculate_gravity(mass, gravity_constant);
    
    // Вывод результата
    printf("Сила тяжести для объекта массой %.2lf кг составляет %.2lf Н.\n", mass, force_of_gravity);
    
    return 0; // Завершаем программу
}

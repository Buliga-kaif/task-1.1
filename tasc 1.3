#include <stdio.h> 
#include <math.h> 
#include <stdlib.h>

/*
 * @brief Функция для получения веса
 * @param mass Масса мешка
 * @param g Ускорение свободного падения
 * @return Вес (сила тяжести)
 */
double getWeight(const double mass, const double g);

/*
 * @brief Главная функция программы
 * @return 0, если программа работает корректно
 */
int main(void) {
    printf("Enter mass:\t");
    const double mass = input();
    const double g = 9.81; // Ускорение свободного падения (постоянная)
    printf("Weight:\t%lf\n", getWeight(mass, g));
    printf("gravity:\t%lf\n", getWeight(mass, g));
    return 0;
}

/*
 * @brief Функция для ввода числа
 * @return Введенное число
 */
double input(void) {
    double number = 0.0; // Инициализация переменной
    if (!scanf_s("%lf", &number)) {
        printf("Input Error\n");
        exit(EXIT_FAILURE);
    }
    return number;
}

double getWeight(const double mass, const double g) {
    return (mass * g);
}

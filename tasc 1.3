#include <stdio.h>

/**
 * @brief Главная функция программы.
 *
 * Данная программа вычисляет силу тяжести для заданной массы, введенной пользователем.
 *
 * @return 0, если программа завершилась успешно.
 */
int main() {
    double mass; // Масса мешка в килограммах (кг)
    double force_of_gravity; // Сила тяжести в ньютонах (Н)

    // Ввод данных от пользователя
    printf("Введите массу картошки (в кг): "); 
    scanf("%lf", &mass); // Считываем массу, введенную пользователем

    // Вычисление силы тяжести
    force_of_gravity = mass * 9.81; // Сила тяжести вычисляется по формуле F = m * g, где g ≈ 9.81 м/с²

    // Вывод результата
    printf("Сила тяжести (F): %.2f Н\n", force_of_gravity); // Выводим силу тяжести с двумя знаками после запятой
    printf("Вес: %.2f Н\n", force_of_gravity); // Выводим вес, который равен силе тяжести

    return 0; // Завершение программы
}

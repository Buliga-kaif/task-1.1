#include <stdio.h>

/**
 * @brief Функция для вычисления силы тяжести.
 *
 * Данная функция принимает массу в килограммах и возвращает силу тяжести в ньютонах.
 *
 * @param mass Масса объекта в килограмма (кг).
 * @return Сила тяжести в ньютонах (Н).
 */
double calculate_gravity(double mass) {
    return mass * 9.81; // Сила тяжести по формуле F = m * g
}
/**
 * @brief Главная функция программы.
 *
 * Данная программа вычисляет силу тяжести для заданной массы, введенной пользователем.
 *
 * @return 0, если программа завершилась успешно.
 */
int main(void) {
    double mass; // Масса объекта в килограммах (кг)
    double force_of_gravity; // Сила тяжести в ньютонах (Н)
    // Ввод данных от пользователя
    printf("Введите массу объекта (в кг): ");
    scanf("%lf", &mass); // Считываем массу, введенную пользователем
    // Вычисление силы тяжести
    force_of_gravity = calculate_gravity(mass);
    // Вывод результата
    printf("Сила тяжести (F): %.2f Н\\n", force_of_gravity); // Выводим силу тяжести
    return 0; // Завершение программы
}

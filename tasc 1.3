#include <stdio.h> 

/**
 * @brief Главная функция программы
 * 
 * Эта программа вычисляет силу тяжести (вес) мешка с картошкой
 * на основании введенной массы мешка и значения гравитационной постоянной.
 * Результаты выводятся на экран.
 *
 * @return int 
 */
int main(void) {
    float mass; 
    float g;    

    printf("Введите массу мешка с картошкой в кг: ");
     while ( scanf("%f", &mass)  != 1 || mass <= 0) {
        fflush(stdin);
        printf("Ошибка! Длина должна быть положительным числом.\n");
        printf("Попробуйте снова: ");
    }

  
    printf("Введите значение гравитационной постоянной (g) в м/с²: ");
    scanf("%f", &g); 
    

    float weight = mass * g;


    printf("Сила тяжести и вес мешка: %.2f Н\n", weight); 

    return 0; 
}

#include <stdio.h>
#include <math.h>

/**
 * @brief Основная программа для вычисления значения функции y в зависимости от введенного значения x.
 *
 * Программа принимает пользовательский ввод, проверяет корректность ввода и вычисляет значение
 * y на основе заданных условий:
 * - y = a * x^2 * ln(x), если 1 ≤ x ≤ 2
 * - y = 1, если x < 1
 * - y = e^(a * x) * cos(x), если x > 2
 *
 * @return 0, если программа завершилась успешно.
 */
int main() {
    double x, y;                // Переменные для ввода значения x и результата y
    const double a = 2.0;      // Константа a, используемая в вычислениях

    // Ввод значения x с проверкой
    printf("Введите значение x: ");
    while (scanf("%lf", &x) != 1 || getchar() != '\n') {
        printf("Неверный ввод. Пожалуйста, введите число: ");
        while (getchar() != '\n'); // Очищаем буфер ввода
    }

    // Вычисление y в зависимости от условия
    if (x >= 1 && x <= 2) {
        y = a * pow(x, 2) * log(x);
    } else if (x < 1) {
        y = 1;
    } else { // x > 2
        y = exp(a * x) * cos(x);
    }

    // Вывод результата
    printf("Результат y = %lf\n", y);

    return 0;
}
